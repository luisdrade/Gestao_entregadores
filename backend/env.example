# Configurações de Produção para Railway
# Copie este arquivo para .env e preencha com seus valores

# Django
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-app-name.railway.app,localhost,127.0.0.1

# Database (Render.com + PlanetScale MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=gestao_entregadores
DB_USER=your-planetscale-user
DB_PASSWORD=your-planetscale-password
DB_HOST=your-host.mysql.planetscale.com
DB_PORT=3306
DB_SSL_CA=-----BEGIN CERTIFICATE-----\nMIIEQTCCAqmgAwIBAgIUTtG6l4n1u1Y4rBmhJg==\n-----END CERTIFICATE-----

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Media Files
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Email - Configuração para 2FA Pós-Cadastro
